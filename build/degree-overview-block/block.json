{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 2,
  "name": "asu-degree-search/degree-overview-block",
  "version": "1.0.0",
  "title": "ASU Degree Overview",
  "category": "uds",
  "keywords": [
    "ASU",
    "overview",
    "block",
    "degree"
  ],
  "icon": "list-view",
  "description": "Provide a degree overview block, that will display cards or list of degrees for a school or college.",
  "supports": {
    "html": false,
    "align": [
      "wide",
      "full"
    ]
  },
  "textdomain": "asu-degree-search-overview-block",
  "viewScript": [
    "file:./frontend.js",
    "asu-degree-overview-view-script"
  ],
  "editorScript": "file:./index.js",
  "style": "file:./style-index.css",
  "attributes": {
    "degreesPerPage": {
      "type": "string",
      "default": "8"
    },
    "dataSourceBlacklistAcadPlans": {
      "type": "string",
      "default": ""
    },
    "dataSourceCollegeAcadOrg": {
      "type": "string",
      "default": ""
    },
    "dataSourceDepartmentCode": {
      "type": "string",
      "default": ""
    },
    "dataSourceProgram": {
      "type": "string",
      "enum": [
        "undergrad",
        "graduate"
      ],
      "default": "undergrad"
    },
    "dataSourceCert": {
      "type": "boolean",
      "default": false
    },
    "defaultView": {
      "type": "string",
      "enum": [
        "grid-view",
        "list-view"
      ],
      "default": "list-view"
    },
    "heroImageUrl": {
      "type": "string",
      "default": ""
    },
    "heroAltText": {
      "type": "string",
      "default": ""
    },
    "heroImageSize": {
      "type": "string",
      "enum": [
        "small",
        "medium",
        "large"
      ],
      "default": "medium"
    },
    "studentType": {
      "type": "string",
      "enum": [
        "undergrad",
        "graduate"
      ],
      "default": "undergrad"
    },
    "hasFilters": {
      "type": "boolean",
      "default": true
    },
    "hasSearchBar": {
      "type": "boolean",
      "default": true
    },
    "actionApplyNowUrl": {
      "type": "string",
      "default": "https://admission.asu.edu/apply"
    },
    "enableIntroContent": {
      "type": "boolean",
      "default": false
    },
    "introContentType": {
      "type": "string",
      "enum": [
        "text",
        "text-photo-grid",
        "text-media",
        "text-image-overlay"
      ],
      "default": "text"
    }
  }
}